{{!< default}}
{{#post}}
<header class="mainHeader block">
	<section class="leftBlock mainCover" 
		{{#if image}}
			style="background-image: url('{{image}}');" 
		{{else}}
			style="background-image: url('{{@blog.cover}}');"
		{{/if}}>
		{{#if @blog.logo}}
		 	<a class="blogLogo" href="{{@blog.url}}" ><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
		{{else}}
		 	<h1>{{@blog.title}}</h1>
		{{/if}}
		<div class="filter"></div>
		<span id="menuOpen" class="desktopHidden menuBtn"><i class="fa fa-bars fa-2x"></i></span>
		<div class="mainInfo">
			<h2 class="tagline">{{@blog.description}}</h2>
			<div class="line"></div>
			{{> "address"}}
			<div class="desktopHidden">
				{{> "social"}}
			</div>
		</div>
		<h1 class="pageTitle"><i class="fa fa-angle-down"></i>ABOUT </h1>
	</section>
	<section id="mobileMenu" class="rightBlock menuBlock" style="background-image: url('/assets/rightbkg.jpg');">
		<div class="whitefilter"></div>
		<span id="menuClose" class="desktopHidden menuBtn"><i class="fa fa-times fa-2x"></i></span>
		<div class="menu">
			{{navigation}}
			<div class="desktopSocial mobileHidden">
				{{> "social"}}
			</div>
		</div>
	</section>
</header>

<main class="{{post_class}}" id="staticPage">
	{{content}}
	<div class="morePost">
		<div class="morePostWrapper">
			<h3 class="tagline">Give us a call for customized services!</h3>
			{{> "cta"}}
		</div>
	</div>
</main>
{{/post}}
{{> "footer"}}